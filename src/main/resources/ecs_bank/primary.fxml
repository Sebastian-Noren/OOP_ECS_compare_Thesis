<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1024.0" stylesheets="@basicStyleSheet.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecs_bank.PrimaryController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" text="Close" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem mnemonicParsing="false" text="Delete" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <padding>
      <Insets bottom="5.0" />
   </padding>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="690.0" prefWidth="217.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button fx:id="loadFileBtn" mnemonicParsing="false" text="Button" />
                  <Button fx:id="saveFIleBtn" mnemonicParsing="false" text="Button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <TextField fx:id="textInputWebsite" promptText="Login" />
            <TextField fx:id="textInputPassword" promptText="Password" />
            <Button fx:id="genPassBtn" mnemonicParsing="false" text="Generate password" />
            <HBox alignment="TOP_RIGHT" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TextArea prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <Region prefHeight="690.0" prefWidth="15.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Region prefHeight="10.0" prefWidth="1024.0" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
